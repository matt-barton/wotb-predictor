<h1>Register</h1>

<div class="gamma cookie-warning hidden" id="cookie-notice">This site requires cookies to be enabled in your browser.</div>


<form id="registration" action="/doSignup" method="post">
    <div id="reg-container">
        <div class="notice">
            Register using your Wrath Of The Barclay username.  Please don't use someone else's username for a "joke". They'll notice, and then it'll be hassle to delete your account, etc.
        </div>
        <div id="fields" class="grid"><!--
        --><div class="grid__item one-whole">
                <div class="grid"><!--
                --><div class="grid__item one-half">
                        <fieldset>
                            <legend>Username</legend>
                            <div>
                                <input name="username" id="register-username" type="text" class="text-input" placeholder="username" value="{{username}}"/>
                            </div>
                            <div class="error-area"></div>
                        </fieldset>
                    </div><!--
                --><div class="grid__item one-half">
                        <fieldset>
                            <legend>Password (twice)</legend>
                            <div>
                                <input name="password" id="register-password" type="password" class="text-input register-password" placeholder="password"/>
                            </div>
                            <div>
                                <input name="repeat" id="register-repeat" type="password" class="text-input register-password" placeholder="repeat password"/>
                            </div>
                            <div class="error-area"></div>
                        </fieldset>
                    </div><!--
            --></div>
            </div><!--
    --></div>
        <div id="server-error">
            {{error}}
        </div>
        <div>
            <input type="submit" value="Submit" />
        </div>
    </div>
</form>

<script>$(document).ready(registerInit);</script>
