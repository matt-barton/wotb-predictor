{{#if auth.loggedIn}}
	Hello {{auth.username}}!
{{else}}
	<form action="/signIn" method="post">
		<div>
			<label>Username</label>
			<input name="username" id="username" type="text" class="text-input" placeholder="username" value="{{username}}" />
		</div>
		<div>
			<label>Password</label>
			<input name="password" id="password" type="password" class="text-input" placeholder="password"/>
		</div>
		<div>
			<label>Remember Me</label>
			<input name="rememberMe" id="rememberMe" type="checkbox" class="text-input" />
		</div>
		<input type="submit" value="Go" />
		<div class="warning">{{loginError}}</div>
	</form>
{{/if}}

<div class="alpha">Yellalee's NCFC Predictions League</div>

{{#if auth.loggedIn}}

{{#if season.current}}
<div id="first" class="grid">
	<div class="grid__item five-eighths">
		<span class="delta">Predictions for {{season.name}}</span>
	</div><!--
 --><div class="grid__item three-eighths">
		<button type="button" class="btn btn--small btn--negative post-predictions hidden">Save Predictions</button>
	</div>
</div>

{{#each season.miniseasons}}
<div class="grid page-block eleven-twelfths miniseason-block">
	<div class="grid__item one-whole">
		<span class="delta">Miniseason {{index}} - Deadline {{deadline}}{{#if open}}{{else}} (closed){{/if}}</span>
	</div><!--
	{{#each fixtures}}
 --><div class="fixture-block"><!--
 	 --><div class="grid__item three-eighths fixture-team">
 	 		{{team}}
		</div><!--
	 --><div class="grid__item one-eighth fixture-venue">
	 		({{venue}})
	 	</div><!--
 	 --><div class="grid__item four-eighths">
 	 		{{#if ../open}}
			<select class="enable-save fixture-prediction">
				<option></option>
				<option{{#compare prediction '==' 'Win'}} selected{{/compare}}>Win</option>
				<option{{#compare prediction '==' 'Draw'}} selected{{/compare}}>Draw</option>
				<option{{#compare prediction '==' 'Lose'}} selected{{/compare}}>Lose</option>
			</select>
			{{else}}
				{{prediction}}
 	 		{{/if}}
		</div><!--
 --></div><!--			 
	{{/each}}
--></div>
{{/each}}

{{else}}
	<div class="game-not-ready">
		We're not quite ready to accept your predictions yet.  Keep an eye on WotB for announcements.
	</div>
{{/if}}
{{/if}}

<div>
	<button type="button" class="btn btn--negative post-predictions hidden">Save Predictions</button>
</div>

<script>
	$(document).ready(jsInit);
</script>